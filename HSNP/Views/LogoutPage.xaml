<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HSNP.Views.LogoutPage">
    <ContentPage.Content>
      <StackLayout Padding="20" BackgroundColor="White">
             <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                <ContentView Padding="0,0,0,0" VerticalOptions="FillAndExpand">
                    <Image Source="two_step_logo.png" VerticalOptions="Center" HeightRequest="110" />
                </ContentView>
                   <Label HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" FontAttributes="Bold" FontSize="Medium"    Text="Log out of the system?"></Label>

                 <StackLayout  Margin="0,50" Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                 <Button HorizontalOptions="Start" Text="Cancel" BackgroundColor="#000" TextColor="White" Clicked="Cancel_Clicked" ></Button>
                 <Button HorizontalOptions="EndAndExpand" Text="Log Out" BackgroundColor="#f2c417" TextColor="White" Clicked="Logout_Clicked" ></Button>
                 
                     </StackLayout>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

