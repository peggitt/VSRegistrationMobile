<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HSNP.Mobile.Views.LogoutPage"
             Title="Logout">

    <VerticalStackLayout VerticalOptions="Fill">
       <HorizontalStackLayout HorizontalOptions="Center">
			 <Image Source="hsnp_logo" Margin="0,0,20,0" HorizontalOptions="Center"  HeightRequest="100" />
              <Image Source="ndma_logo" HorizontalOptions="Center" HeightRequest="90" />
			 <BoxView HeightRequest="1" BackgroundColor="Silver"></BoxView>
		</HorizontalStackLayout>
            <Label Style="{StaticResource SubHeadingLabel}" HorizontalOptions="CenterAndExpand" 
                   Text="Logout of the application?" Margin="0,0,0,20" />
            <Button Text="Log out" BackgroundColor="Black" TextColor="White" Clicked="LogoutClicked"></Button>
        <Label HorizontalTextAlignment="Center" Text="{Binding AppVersion}" VerticalOptions="EndAndExpand"></Label>
    </VerticalStackLayout>
</ContentPage>
